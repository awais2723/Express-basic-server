<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Welcome</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      height: 100vh;
      background-color: #1e1e2f; /* Background color */
      color: #f39c12; /* Text color */
    }
    .welcome-section {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
    h1 {
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }
    .table-label {
      font-size: 1.5rem;
      font-weight: bold;
      color: #17a2b8; /* Bootstrap info color (blue) */
      text-align: left;
      margin-bottom: 1rem;
    }
    .center-button {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .left-aligned-table {
      margin-left: 0; /* Align table to the left */
      width: 100%; /* Ensure table spans full width */
    }
    .action-buttons button {
      margin-right: 5px; /* Small space between buttons */
    }
  </style>
</head>
<body>
  <!-- Welcome Section -->
  <div class="welcome-section text-center">
    <img src="/images/cag.PNG" alt="CAG Image" class="img-fluid rounded shadow mb-3" style="max-width: 150px;">
    <h1 class="display-4">Welcome to CAG Code Learning!</h1>
  </div>

  <!-- Tasks Section -->
  <div class="container mt-3">
    <div class="text-end mb-3">
        <a href="/addTask" class="btn btn-primary">Add New Task</a>
      </div>
    <!-- Left-Aligned Table with Label -->
    <div>
      <label for="toDoList" class="table-label">Tasks List</label>
      <div class="table-responsive">
        <table class="table table-dark table-hover left-aligned-table" id="toDoList">
          <thead>
            <tr>
              <th>Task Name</th>
              <th>Description</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% tasks.forEach(task => { %>
              <tr>
                <td><%= task.name %></td>
                <td><%= task.description %></td>
                <td><%= task.status %></td>
                <td class="action-buttons">
               
                  <!-- Delete Button -->
                  <button class="btn btn-danger btn-sm delete-btn" title="Delete" data-id="<%= task.id %>">
                    <i class="bi bi-x-lg"></i>
                  </button>
                  
                  <!-- Edit Button -->
                  <a href="/editTask/<%= task.id %>" class="btn btn-warning btn-sm" title="Edit">
                    <i class="bi bi-pencil"></i>
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>
